@page "{Id}"
@model MTLcourts.Pages.AddUserToModel
@{
}


<div class="edit-user-role-container">
    <div class="col-md-4 register-container">
        <h1>Edit User and Role</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"> </div>
            <div class="row">
                <label asp-for="Id">User ID:</label>
                <input asp-for="Id" class="col-sm-10 form-control" disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <br>
            <div class="row">
                <label asp-for="Name">User Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>
            <div class="row">
                <label asp-for="RoleName" class="col">Add user to :</label>
                <input asp-for="RoleName" class="form-control" />
            </div>
            <br>
            <button type="submit" class="btn btn-light btn-info">Save</button>
        </form>

    </div>

</div>
