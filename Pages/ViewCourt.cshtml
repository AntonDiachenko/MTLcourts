    </div>
    <br><br><hr>
    <h2>Player Reviews</h2>
    <hr>
    <div class="player-reviews">
        @foreach (var courtComments in Model.courtComments)
        {
        <div class="row">        
            <div class="col-3">
                <p>@courtComments.User</p>  
                <p><i>@courtComments.DateWhen</i></p>  
            </div>
            <div class="col">
              <p>@courtComments.Comment</p>  
            </div>
        </div>
        <hr>        
        }
    </div>

    
