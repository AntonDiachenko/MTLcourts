@page "{Id:int}"
@model MTLcourts.Pages.ViewCourtModel

@{
    
}

<div class="container viewCourtContainer">
    <div class="court-image-container">
        <img class="view-court-image" src="/@Model.court.PhotoUrl" alt="basketball court photo">
    </div>
    <div class="court-info-container">
        <h2 class="">@Model.court.Name</h2><br>
        <p class=""><b>Address:</b> @Model.court.Address</p>
        <p class="">@Model.court.Description</p>
    </div>
    <div class="comments-rating">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            @* <div class="form-group row">
                <label asp-for="courtRating.Rating" class="col-sm-2 col-form-label">Your rating</label>
                <div class="col-sm-10">
                    <textarea asp-for="courtRating.Rating" class="form-control"></textarea>
                    <span asp-validation-for="courtRating.Rating" class="text-danger"></span>
                </div>
            </div> *@
            <div class="form-group row">
                <label asp-for="comment.Comment" class="col-sm-2 col-form-label">Your review</label>
                <div class="col-sm-10">
                    <textarea asp-for="comment.Comment" class="form-control"></textarea>
                    <span asp-validation-for="comment.Comment" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <h2>Reviews</h2>
    <div class="row g-4">
        @foreach (var courtComments in Model.courtComments)
        {
            <div class="col-sm-4">
                <div class="">
                    <div class="">
                        <p >@courtComments.Comment</p>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
